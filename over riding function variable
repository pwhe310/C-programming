#include <stdio.h>
#include <conio.h>
#include <ctype.h>
#include <string.h>
#include <stdlib.h>
#include <time.h>
#include <stdio.h>

int half(int *i);

int main(){
    int i;

    printf("enter an int ... ");
    scanf(" %d", &i);

    half(&i);

    printf("In main() i is now %d.\n", i);

    return 0;
}

int half(int *i)
{
    *i = *i / 2;
    printf("your value halved is %d.\n", *i);
    return 0;
}
