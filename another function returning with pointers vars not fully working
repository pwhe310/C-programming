float avgGrade(float *testGrade[3]);

int main()
{
    int i;
    float *grade[3], avg;

    for (i = 0; i < 3; ++i) {
        printf("#%d: what was the test score?: ", (i + 1));
        scanf(" %p", &grade[i]);

         //avgGrade(&grade[i]);       //line of code will fail sending
    }

    printf("Avg is %f", avg);
    return 0;
}

float avgGrade(float *testGrade[3])
{
    float avg;

    avg = *testGrade[1] + *testGrade[2] + *testGrade[3];

    return (avg);
};
